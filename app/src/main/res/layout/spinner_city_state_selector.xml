<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:id="@+id/fra"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:padding="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome! where should we deliver to?"
            android:textSize="30sp"
            android:gravity="center"
            android:textColor="#212121"/>

    </FrameLayout>

    <RelativeLayout
        android:layout_below="@+id/fra"
        android:id="@+id/rela"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="7dp">


        <LinearLayout
            android:id="@+id/linear1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/spinner_selector_margin">

            <TextView
                android:id="@+id/textView"
                android:layout_width="130dp"
                android:layout_height="50dp"
                android:layout_gravity="left"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="#000"
                android:text="Select State"
                android:textSize="15dp"
                />

            <com.jaredrummler.materialspinner.MaterialSpinner
                android:id="@+id/spinnerState"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/select_state" />

            <TextView
                android:layout_width="130dp"
                android:layout_height="50dp"
                android:layout_gravity="left"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="#000"
                android:text="Select City"
                android:textSize="15dp"
                />

            <com.jaredrummler.materialspinner.MaterialSpinner
                android:id="@+id/spinnerCity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="select city"
                android:layout_marginBottom="15dp"/>



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@+id/linear1">

            <Button
                android:id="@+id/submitButtonForStateCitySelectorSpinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal"
                android:theme="@style/AppTheme.Button"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:text="show restaurant" />

            <Button
                android:id="@+id/loginhereinspinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Login Here!!"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:theme="@style/AppTheme.Button2"
                android:padding="5dp"
                android:layout_gravity="center"/>

        </LinearLayout>

    </RelativeLayout>




</RelativeLayout>